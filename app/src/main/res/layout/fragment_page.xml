<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:scrollbars="vertical"
    tools:context=".page.PageFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/go_edit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_add_circle_outline_24"
            android:backgroundTint="#fff"
            android:contentDescription="+" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            tools:ignore="NestedScrolling">

            <LinearLayout
                android:id="@+id/form_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include
                    android:id="@+id/type_1"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <include
                    android:id="@+id/type_1_1"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/form_1_1_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="80dp"/>
                <include
                    android:id="@+id/type_1_2"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <include
                    android:id="@+id/type_1_3"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <include
                    android:id="@+id/type_2"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <include
                    android:id="@+id/type_2_1"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/form_2_1_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="80dp"/>
                <include
                    android:id="@+id/type_2_2"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/form_2_2_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="80dp"/>
                <include
                    android:id="@+id/type_2_3"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <include
                    android:id="@+id/type_3"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/form_3_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="40dp"/>

                <include
                    android:id="@+id/type_4"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/form_4_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="40dp"/>

                <include
                    android:id="@+id/type_5"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <include
                    android:id="@+id/type_ex_rate"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/form_5_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="40dp"/>

                <include
                    android:id="@+id/type_6"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <include
                    android:id="@+id/type_7"
                    layout="@layout/form_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/go_edit_button_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/go_edit"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</ScrollView>